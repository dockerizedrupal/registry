<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= @server_name %></title>
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/style.css" rel="stylesheet">
    <!--[if lt IE 9]>
      <script src="js/html5shiv.min.js"></script>
      <script src="js/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>
  <div id="page" class="container">
    <div class="row">
      <h1><%= @server_name %></h1>
    </div>
    <?php if ($repositories): ?>
      <?php foreach ($repositories as $repository => $tags): ?>
        <div class="row">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h2 class="panel-title">
                <?php print $repository; ?>
              </h2>
            </div>
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Image</th>
                  <th>Version 1: Last updated</th>
                  <th>Version 2: Last updated</th>
                </tr>
              </thead>
              <tbody>
                <?php foreach ($tags as $tag => $data): ?>
                  <?php ksort($data); ?>
                  <tr>
                    <td><%= @server_name %>/<?php print $repository; ?>:<?php print $tag; ?></td>
                    <?php if (!in_array('v1', array_keys($data))): ?>
                      <td></td>
                    <?php endif; ?>
                    <?php foreach ($data as $version => $last_updated): ?>
                      <td class="tag-last-updated"><?php print $last_updated; ?></td>
                    <?php endforeach; ?>
                    <?php if (!in_array('v2', array_keys($data))): ?>
                      <td></td>
                    <?php endif; ?>
                  </tr>
                <?php endforeach; ?>
              </tbody>
            </table>
          </div>
        </div>
      <?php endforeach; ?>
    <?php else: ?>
      <div class="row">
        There are no repositories pushed to this registry.
      </div>
    <?php endif; ?>
