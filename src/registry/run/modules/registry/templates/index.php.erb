<?php

require_once __DIR__ . '/v1.php';
require_once __DIR__ . '/v2.php';

$registry_v1_repositories = registry_v1_repositories_get();
$registry_v2_repositories = registry_v2_repositories_get();

$repositories = array();

foreach ($registry_v1_repositories as $repository => $tags) {
  if (!isset($repositories[$repository])) {
    $repositories[$repository] = array();
  }

  foreach ($tags as $tag) {
    if (!isset($repositories[$repository][$tag])) {
      $repositories[$repository][$tag] = array();
    }

    $repositories[$repository][$tag][v1] = registry_v1_tag_last_updated_get($repository, $tag);
  }
}

foreach ($registry_v2_repositories as $repository => $tags) {
  if (!isset($repositories[$repository])) {
    $repositories[$repository] = array();
  }

  foreach ($tags as $tag) {
    if (!isset($repositories[$repository][$tag])) {
      $repositories[$repository][$tag] = array();
    }

    $repositories[$repository][$tag][v2] = registry_v2_tag_last_updated_get($repository, $tag);
  }
}

ksort($repositories);
?>
